{
  "name": "architool-mcp-server",
  "version": "0.1.0",
  "description": "MCP Server bridge process for ArchiTool",
  "main": "mcp-server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/mcp-server.js --bundle --platform=node --target=node18 --outfile=dist/mcp-server.bundle.js --format=cjs --external:fsevents && mv dist/mcp-server.bundle.js dist/mcp-server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  }
}
