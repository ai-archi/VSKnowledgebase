  "scripts": {
    "compile": "tsc -p tsconfig.json && npm run copy:resources",
    "copy:resources": "mkdir -p dist/extension/resources/templates && cp src/resources/templates/*.archimate src/resources/templates/*.mmd src/resources/templates/*.puml dist/extension/resources/templates/ 2>/dev/null || true",
    "watch": "tsc -p tsconfig.json --watch",
    "test": "jest",
    "rebuild:electron": "node scripts/rebuild-electron.js",
    "install:electron": "pnpm install && pnpm run rebuild:electron",
    "postinstall": "echo 'Note: better-sqlite3 will be compiled for development Node.js version. For Electron runtime, run: pnpm run rebuild:electron'"
  },
