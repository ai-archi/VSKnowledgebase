{
  "name": "@architool/extension",
  "displayName": "ArchiTool",
  "description": "Architecture Management Tool for VSCode",
  "version": "0.1.0",
  "publisher": "architool",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension/main.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "architool.documentView",
          "name": "Documents",
          "when": "true"
        },
        {
          "id": "architool.taskView",
          "name": "Tasks",
          "when": "true"
        },
        {
          "id": "architool.viewpointView",
          "name": "Viewpoints",
          "when": "true"
        },
        {
          "id": "architool.assistantsView",
          "name": "Assistants",
          "when": "true"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "architool.archimateEditor",
        "displayName": "ArchiMate Diagram",
        "selector": [
          {
            "filenamePattern": "*.archimate"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "architool.mermaidEditor",
        "displayName": "Mermaid Diagram",
        "selector": [
          {
            "filenamePattern": "*.mmd"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "architool.plantumlEditor",
        "displayName": "PlantUML Diagram",
        "selector": [
          {
            "filenamePattern": "*.puml"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "archimate",
        "extensions": [
          ".archimate"
        ],
        "aliases": [
          "ArchiMate",
          "archimate"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid",
        "extensions": [
          ".mmd"
        ],
        "aliases": [
          "Mermaid",
          "mermaid"
        ]
      }
    ],
    "commands": [
      {
        "command": "archi.lookup",
        "title": "Lookup"
      },
      {
        "command": "archi.vault.add",
        "title": "Add Local Vault",
        "icon": "$(add)"
      },
      {
        "command": "archi.vault.addFromGit",
        "title": "Add Vault from Git",
        "icon": "$(git-branch)"
      },
      {
        "command": "archi.vault.list",
        "title": "List Vaults"
      },
      {
        "command": "archi.vault.fork",
        "title": "Fork Git Vault"
      },
      {
        "command": "archi.vault.sync",
        "title": "Sync Vault"
      },
      {
        "command": "archi.vault.remove",
        "title": "Remove Vault"
      },
      {
        "command": "archi.artifact.list",
        "title": "List Artifacts"
      },
      {
        "command": "archi.viewpoint.create",
        "title": "Create Viewpoint"
      },
      {
        "command": "archi.template.createFromTemplate",
        "title": "Create from Template"
      },
      {
        "command": "archi.ai.analyzeImpact",
        "title": "Analyze Impact"
      },
      {
        "command": "archi.ai.generatePrompt",
        "title": "Generate Prompt"
      },
      {
        "command": "archi.document.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "archi.document.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "archi.document.addFile",
        "title": "Add File",
        "icon": "$(file-add)"
      },
      {
        "command": "archi.document.addFolder",
        "title": "Add Folder",
        "icon": "$(folder-create)"
      },
      {
        "command": "archi.document.addArchimateDesign",
        "title": "Add Archimate Design",
        "icon": "$(graph-line)"
      },
      {
        "command": "archi.document.addPlantUMLDesign",
        "title": "Add PlantUML Design",
        "icon": "$(graph-line)"
      },
      {
        "command": "archi.document.addMermaidDesign",
        "title": "Add Mermaid Design",
        "icon": "$(graph-line)"
      },
      {
        "command": "archi.document.delete",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "archi.document.editRelations",
        "title": "Edit Relations",
        "icon": "$(link)"
      },
      {
        "command": "archi.template.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "archi.template.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "archi.template.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "archi.task.refresh",
        "title": "Refresh"
      },
      {
        "command": "archi.task.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "archi.task.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "archi.task.addFile",
        "title": "Add File",
        "icon": "$(file-add)"
      },
      {
        "command": "archi.task.addFolder",
        "title": "Add Folder",
        "icon": "$(folder-create)"
      },
      {
        "command": "archi.task.delete",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "archi.template.addFile",
        "title": "Add File Template",
        "icon": "$(file-add)"
      },
      {
        "command": "archi.template.addFolder",
        "title": "Add Folder Template",
        "icon": "$(folder-create)"
      },
      {
        "command": "archi.template.addArchimateDesign",
        "title": "Add Archimate Template",
        "icon": "$(graph-line)"
      },
      {
        "command": "archi.template.addPlantUMLDesign",
        "title": "Add PlantUML Template",
        "icon": "$(graph-line)"
      },
      {
        "command": "archi.template.addMermaidDesign",
        "title": "Add Mermaid Template",
        "icon": "$(graph-line)"
      },
      {
        "command": "archi.template.delete",
        "title": "Delete",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "archi.vault.add",
          "when": "view == architool.documentView",
          "group": "navigation@1"
        },
        {
          "command": "archi.vault.addFromGit",
          "when": "view == architool.documentView",
          "group": "navigation@2"
        },
        {
          "command": "archi.document.expandAll",
          "when": "view == architool.documentView",
          "group": "navigation@3"
        },
        {
          "command": "archi.document.collapseAll",
          "when": "view == architool.documentView",
          "group": "navigation@4"
        },
        {
          "command": "archi.template.expandAll",
          "when": "view == architool.templateView",
          "group": "navigation@3"
        },
        {
          "command": "archi.template.collapseAll",
          "when": "view == architool.templateView",
          "group": "navigation@4"
        },
        {
          "command": "archi.task.expandAll",
          "when": "view == architool.taskView",
          "group": "navigation@3"
        },
        {
          "command": "archi.task.collapseAll",
          "when": "view == architool.taskView",
          "group": "navigation@4"
        }
      ],
