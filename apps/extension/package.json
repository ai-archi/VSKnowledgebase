{
  "name": "@architool/extension",
  "displayName": "ArchiTool",
  "description": "Architecture Management Tool for VSCode",
  "version": "0.1.0",
  "publisher": "architool",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension/main.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "architool.documentView",
          "name": "Documents",
          "when": "true"
        },
        {
          "id": "architool.taskView",
          "name": "Tasks",
          "when": "true"
        },
        {
          "id": "architool.viewpointView",
          "name": "Viewpoints",
          "when": "true"
        },
        {
          "id": "architool.templateView",
          "name": "Templates",
          "when": "true"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "architool.archimateEditor",
        "displayName": "ArchiMate Diagram",
        "selector": [
          {
            "filenamePattern": "*.xml.at"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "architool.mermaidEditor",
        "displayName": "Mermaid Diagram",
        "selector": [
          {
            "filenamePattern": "*.mmd"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "archimate",
        "extensions": [
          ".xml.at"
        ],
        "aliases": [
          "ArchiMate",
          "archimate"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid",
        "extensions": [
          ".mmd"
        ],
        "aliases": [
          "Mermaid",
          "mermaid"
        ]
      }
    ],
    "commands": [
      {
        "command": "archi.lookup",
        "title": "Lookup"
      },
      {
        "command": "archi.vault.add",
        "title": "Add Local Vault",
        "icon": "$(add)"
      },
      {
        "command": "archi.vault.addFromGit",
        "title": "Add Vault from Git",
        "icon": "$(git-branch)"
      },
      {
        "command": "archi.vault.list",
        "title": "List Vaults"
      },
      {
        "command": "archi.vault.fork",
        "title": "Fork Git Vault"
      },
      {
        "command": "archi.vault.sync",
        "title": "Sync Vault"
      },
      {
        "command": "archi.vault.remove",
        "title": "Remove Vault"
      },
      {
        "command": "archi.artifact.list",
        "title": "List Artifacts"
      },
      {
        "command": "archi.viewpoint.create",
        "title": "Create Viewpoint"
      },
      {
        "command": "archi.template.createFromTemplate",
        "title": "Create from Template"
      },
      {
        "command": "archi.ai.analyzeImpact",
        "title": "Analyze Impact"
      },
      {
        "command": "archi.ai.generatePrompt",
        "title": "Generate Prompt"
      },
      {
        "command": "archi.document.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "archi.document.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "archi.document.addFile",
        "title": "Add File",
        "icon": "$(file-add)"
      },
      {
        "command": "archi.document.addFolder",
        "title": "Add Folder",
        "icon": "$(folder-create)"
      },
      {
        "command": "archi.document.addDiagram",
        "title": "Add Diagram",
        "icon": "$(graph)"
      },
      {
        "command": "archi.document.delete",
        "title": "Delete",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "archi.vault.add",
          "when": "view == architool.documentView",
          "group": "navigation@1"
        },
        {
          "command": "archi.vault.addFromGit",
          "when": "view == architool.documentView",
          "group": "navigation@2"
        },
        {
          "command": "archi.document.expandAll",
          "when": "view == architool.documentView",
          "group": "navigation@3"
        },
        {
          "command": "archi.document.collapseAll",
          "when": "view == architool.documentView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "archi.document.addFile",
          "when": "view == architool.documentView && viewItem == vault",
          "group": "1_actions"
        },
        {
          "command": "archi.document.addFolder",
          "when": "view == architool.documentView && viewItem == vault",
          "group": "1_actions"
        },
        {
          "command": "archi.document.addDiagram",
          "when": "view == architool.documentView && viewItem == vault",
          "group": "1_actions"
        },
        {
          "command": "archi.document.delete",
          "when": "view == architool.documentView && viewItem == vault",
          "group": "2_actions"
        },
        {
          "command": "archi.document.addFile",
          "when": "view == architool.documentView && viewItem == document",
          "group": "1_actions"
        },
        {
          "command": "archi.document.addFolder",
          "when": "view == architool.documentView && viewItem == document",
          "group": "1_actions"
        },
        {
          "command": "archi.document.addDiagram",
          "when": "view == architool.documentView && viewItem == document",
          "group": "1_actions"
        },
        {
          "command": "archi.document.delete",
          "when": "view == architool.documentView && viewItem == document",
          "group": "2_actions"
        },
        {
          "command": "archi.document.addFile",
          "when": "view == architool.documentView && viewItem == folder",
          "group": "1_actions"
        },
        {
          "command": "archi.document.addFolder",
          "when": "view == architool.documentView && viewItem == folder",
          "group": "1_actions"
        },
        {
          "command": "archi.document.addDiagram",
          "when": "view == architool.documentView && viewItem == folder",
          "group": "1_actions"
        },
        {
          "command": "archi.document.delete",
          "when": "view == architool.documentView && viewItem == folder",
          "group": "2_actions"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "test": "jest"
  },
  "dependencies": {
    "archimate-js": "0.0.4",
    "better-sqlite3": "^9.0.0",
    "diagram-js": "^15.4.0",
    "inversify": "^6.0.2",
    "js-yaml": "^4.1.0",
    "knex": "^3.1.0",
    "reflect-metadata": "^0.2.2",
    "simple-git": "^3.22.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.6",
    "@types/vscode": "^1.80.0",
    "systemjs": "^6.15.1",
    "typescript": "^5.3.0"
  }
}
