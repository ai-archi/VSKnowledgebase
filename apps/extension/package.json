{
  "name": "@architool/extension",
  "displayName": "ArchiTool",
  "description": "Architecture Management Tool for VSCode",
  "version": "0.1.0",
  "publisher": "architool",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "architool.documentView",
          "name": "Documents",
          "when": "true"
        },
        {
          "id": "architool.taskView",
          "name": "Tasks",
          "when": "true"
        },
        {
          "id": "architool.viewpointView",
          "name": "Viewpoints",
          "when": "true"
        },
        {
          "id": "architool.templateView",
          "name": "Templates",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "archi.lookup",
        "title": "Lookup"
      },
      {
        "command": "archi.vault.add",
        "title": "Add Local Vault"
      },
      {
        "command": "archi.vault.addFromGit",
        "title": "Add Vault from Git"
      },
      {
        "command": "archi.vault.list",
        "title": "List Vaults"
      },
      {
        "command": "archi.vault.fork",
        "title": "Fork Git Vault"
      },
      {
        "command": "archi.vault.sync",
        "title": "Sync Vault"
      },
      {
        "command": "archi.vault.remove",
        "title": "Remove Vault"
      },
      {
        "command": "archi.artifact.list",
        "title": "List Artifacts"
      },
      {
        "command": "archi.viewpoint.create",
        "title": "Create Viewpoint"
      },
      {
        "command": "archi.template.createFromTemplate",
        "title": "Create from Template"
      },
      {
        "command": "archi.ai.analyzeImpact",
        "title": "Analyze Impact"
      },
      {
        "command": "archi.ai.generatePrompt",
        "title": "Generate Prompt"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "test": "jest"
  },
  "dependencies": {
    "@xenova/transformers": "^2.0.0",
    "duckdb": "^1.4.2",
    "inversify": "^6.0.2",
    "js-yaml": "^4.1.0",
    "knex": "^3.1.0",
    "reflect-metadata": "^0.2.2",
    "simple-git": "^3.22.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.6",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0"
  }
}
