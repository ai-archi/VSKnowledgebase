{
  "name": "Architool",
  "displayName": "Architool",
  "description": "Architecture Management Tool for VSCode",
  "version": "0.0.1",
  "publisher": "architool",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "architool",
          "title": "ArchiTool",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "architool.documentView",
          "name": "Documents",
          "when": "true"
        },
        {
          "id": "architool.assistantsView",
          "name": "Assistants",
          "when": "true"
        }
      ],
      "architool": [
        {
          "id": "architool.taskView",
          "name": "Tasks",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "archi.vault.add",
        "title": "Add Vault"
      },
      {
        "command": "archi.vault.addFromGit",
        "title": "Add Vault from Git"
      },
      {
        "command": "archi.vault.list",
        "title": "List Vaults"
      },
      {
        "command": "archi.vault.fork",
        "title": "Fork Vault"
      },
      {
        "command": "archi.vault.sync",
        "title": "Sync Vault"
      },
      {
        "command": "archi.vault.remove",
        "title": "Remove Vault"
      },
      {
        "command": "archi.document.refresh",
        "title": "Refresh Document View"
      },
      {
        "command": "archi.document.expandAll",
        "title": "Expand All"
      },
      {
        "command": "archi.document.collapseAll",
        "title": "Collapse All"
      },
      {
        "command": "archi.document.addFile",
        "title": "Add File"
      },
      {
        "command": "archi.document.addFolder",
        "title": "Add Folder"
      },
      {
        "command": "archi.document.delete",
        "title": "Delete"
      },
      {
        "command": "archi.document.create",
        "title": "Create Document"
      },
      {
        "command": "archi.document.addPlantUMLDesign",
        "title": "Add PlantUML Design"
      },
      {
        "command": "archi.document.addMermaidDesign",
        "title": "Add Mermaid Design"
      },
      {
        "command": "archi.document.editRelations",
        "title": "Edit Relations"
      },
      {
        "command": "archi.viewpoint.create",
        "title": "Create Viewpoint"
      },
      {
        "command": "archi.template.refresh",
        "title": "Refresh Template View"
      },
      {
        "command": "archi.template.expandAll",
        "title": "Expand All"
      },
      {
        "command": "archi.template.collapseAll",
        "title": "Collapse All"
      },
      {
        "command": "archi.template.addFile",
        "title": "Add Template File"
      },
      {
        "command": "archi.template.addFolder",
        "title": "Add Template Folder"
      },
      {
        "command": "archi.template.delete",
        "title": "Delete Template"
      },
      {
        "command": "archi.template.addPlantUMLDesign",
        "title": "Add PlantUML Design Template"
      },
      {
        "command": "archi.template.addMermaidDesign",
        "title": "Add Mermaid Design Template"
      },
      {
        "command": "archi.template.createFromTemplate",
        "title": "Create from Template"
      },
      {
        "command": "archi.ai.analyzeImpact",
        "title": "Analyze Impact"
      },
      {
        "command": "archi.ai.generatePrompt",
        "title": "Generate Prompt"
      },
      {
        "command": "archi.lookup",
        "title": "Lookup"
      },
      {
        "command": "archi.artifact.list",
        "title": "List Artifacts"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "webpack --mode production --devtool hidden-source-map",
    "watch": "webpack --watch",
    "package": "pnpm run compile && vsce package --no-dependencies",
    "package:vsix": "pnpm run package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "vsce": "^2.15.0"
  }
}
