<idea-plugin>
    <id>com.architool</id>
    <name>Architool</name>
    <version>0.0.1</version>
    <vendor email="support@architool.com" url="https://architool.com">Architool</vendor>

    <description><![CDATA[
    Architool - Architecture documentation and diagramming tool for IntelliJ IDEA.
    
    Features:
    - Mermaid diagram editor
    - PlantUML diagram editor
    - Document management
    - Vault system
    - AI-powered assistance
    ]]></description>

    <change-notes><![CDATA[
    Initial release for IntelliJ IDEA.
    ]]></change-notes>

    <!-- 兼容的 IntelliJ 版本 -->
    <idea-version since-build="231" until-build="241.*"/>

    <!-- 依赖的插件 -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- 自定义编辑器 -->
        <fileEditorProvider implementation="com.architool.editor.MermaidEditorProvider"/>
        <fileEditorProvider implementation="com.architool.editor.PlantUMLEditorProvider"/>

        <!-- Tool Window -->
        <toolWindow id="ArchitoolDocumentView" 
                    secondary="false" 
                    anchor="left" 
                    factoryClass="com.architool.view.DocumentToolWindowFactory"/>

        <!-- 其他扩展点 -->
    </extensions>

    <actions>
        <!-- 命令注册 -->
        <!-- 示例：
        <action id="Architool.CreateVault" 
                class="com.architool.action.CreateVaultAction" 
                text="Create Vault" 
                description="Create a new vault">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        -->
    </actions>
</idea-plugin>

