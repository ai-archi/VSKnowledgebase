# 加载 conda 命令
source /opt/anaconda3/etc/profile.d/conda.sh

# 自动激活 dev311 环境（使用已有的环境）
# 直接设置环境变量和 PATH，确保优先级
export CONDA_DEFAULT_ENV=dev311
export CONDA_PREFIX=/opt/anaconda3/envs/dev311
export PATH="$CONDA_PREFIX/bin:$PATH"


# 使用 direnv 自动加载 nvm 并切换 Node.js 版本
# 加载 nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"

# 如果存在 .nvmrc 文件，自动切换到指定版本
if [ -f .nvmrc ]; then
  nvm use v18.20.5
fi
