{
	"version": "0.2.0",
	"configurations": [
		{
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/extension"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/extension/out/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/**/node_modules/mocha/**/*.js"
      ],
      "env": {
        "STAGE": "dev",
        "VSCODE_DEBUGGING_EXTENSION": "architool",
        "LOG_LEVEL": "debug"
      },
      "preLaunchTask": "Build All"
    }
	]
}
