{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Extension",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "compile"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/extension"
      },
      "problemMatcher": "$tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "echo": true
      }
    },
    {
      "label": "Build Archimate JS",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/apps/extension/archimate-js && mkdir -p ${workspaceFolder}/apps/extension/archimate-js && npm run build",
      "options": {
        "cwd": "${workspaceFolder}/packages/archimate-js",
        "env": {
          "OUTPUT_PATH": "../../apps/extension/archimate-js"
        }
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build Webview",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/webview"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build Mermaid Editor",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "build:mermaid-editor"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build All",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Archimate JS",
        "Build Mermaid Editor",
        "Compile Extension",
        "Build Webview"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Watch Extension",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "watch"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/extension"
      },
      "problemMatcher": "$tsc-watch",
      "isBackground": true
    }
  ]
}
