{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Compile Extension",
        "Build Webview",
        "Copy Webview Assets",
        "Build MCP Server",
        "Copy Demo Vaults"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Compile Extension",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "compile"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/extension"
      },
      "problemMatcher": "$tsc",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "echo": true
      }
    },
    {
      "label": "Build Webview",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "build:webview"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Copy Webview Assets",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "copy:assets"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build MCP Server",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "build:mcp-server"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Copy Demo Vaults",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "copy:demo-vaults"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/extension"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Watch Extension",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "watch"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/extension"
      },
      "problemMatcher": "$tsc-watch",
      "isBackground": true
    }
  ]
}
