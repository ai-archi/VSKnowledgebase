{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Extension",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "compile"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/extension"
      },
      "problemMatcher": "$tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Watch Extension",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "watch"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/extension"
      },
      "problemMatcher": "$tsc-watch",
      "isBackground": true
    }
  ]
}
