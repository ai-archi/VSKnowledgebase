{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@architool/domain/*": ["../../../domain/*/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}

